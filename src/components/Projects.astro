---
// Projects component for YouTube channel and Podcast
const projects = [
  {
    name: 'Papperlapapp',
    type: 'YouTube Channel',
    description: 'Humor with brackets',
    url: 'https://www.youtube.com/@papperlapapp',
    icon: 'youtube'
  },
  {
    name: 'AutoWeird FM',
    type: 'Podcast',
    description: 'A podcast about weird cars and automotive culture',
    url: '#', // Update with actual podcast URL
    icon: 'podcast'
  }
];
---

<section class="mb-12 md:mb-16 lg:mb-20">
  <h2 class="text-2xl md:text-3xl font-semibold mb-6">Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {projects.map((project) => (
      <a
        href={project.url}
        target="_blank"
        rel="noopener noreferrer"
        class="group block p-6 rounded-xl border border-secondary/20 hover:border-accent transition-all duration-300 hover:shadow-xl"
      >
        <div class="flex items-start justify-between mb-3">
          <h3 class="text-xl font-semibold group-hover:text-accent transition-colors">
            {project.name}
          </h3>
          <svg class="w-5 h-5 text-secondary group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </div>
        <p class="text-sm text-accent mb-2">{project.type}</p>
        <p class="text-secondary text-sm md:text-base">{project.description}</p>
      </a>
    ))}
  </div>
</section>
